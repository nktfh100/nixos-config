{
    "layer": "top",
    "spacing": 0,
    "height": 0,
    "margin-top": 8,
    "margin-right": 8,
    "margin-bottom": 0,
    "margin-left": 8,
    "modules-left": [
			"custom/launcher",
			"hyprland/workspaces"
    ],
    "modules-center": [
			"custom/spotify"
    ],
    "modules-right": [
			"tray",
			"hyprland/language",
			"cpu_text",
			"cpu",
			"memory",
			"battery",
			"temperature",
			"network",
			"pulseaudio",
			"clock",
			"custom/control"
    ],
    "custom/launcher": {
			"format": " ",
			"on-click": "rofi -show drun -show-icons ",
			"on-click-right": "killall rofi",
			"tooltip": false
    },
    "hyprland/workspaces": {
			"disable-scroll": true,
			"all-outputs": false,
			"tooltip": false
    },
    "tray": {
			"spacing": 10,
			"tooltip": false
    },
    "clock": {
			"format": "{:%H:%M}",
			"tooltip": false
    },
    "cpu": {
			"format": "cpu {usage}%",
			"interval": 2,
			"states": {
				"critical": 90
			}
    },
    "memory": {
			"format": "mem {percentage}%",
			"interval": 2,
			"states": {
				"critical": 80
			},
    },
    "battery": {
			"format": "bat {capacity}%",
			"interval": 5,
			"states": {
				"warning": 20,
				"critical": 10
			},
			"tooltip": false
    },
    "network": {
			"format-wifi": "wifi {bandwidthDownBits}",
			"format-ethernet": "enth {bandwidthDownBits}",
			"format-disconnected": "no network",
			"interval": 5,
			"tooltip": false
    },
    "pulseaudio": {
			"scroll-step": 5,
			"max-volume": 150,
			"format": "vol {volume}%",
			"format-bluetooth": "vol {volume}%",
			"nospacing": 1,
			"on-click": "pwvucontrol",
			"tooltip": false
    },
    "hyprland/language": {
			"format": "{shortDescription}"
    },
    "custom/control": {
			"format": " ",
			"on-click": "wlogout",
			"tooltip": false
    },
		"custom/spotify": {
			"exec": "python ~/.config/waybar/scripts/spotify.py",
			"tooltip": false,
			"return-type": "json",
			"interval": 2,
			"on-click": "playerctl play-pause --player=spotify",
			"on-click-right": "playerctl next --player=spotify"
		}
}
